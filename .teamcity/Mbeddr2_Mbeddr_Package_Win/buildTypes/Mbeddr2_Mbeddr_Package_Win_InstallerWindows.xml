<?xml version="1.0" encoding="UTF-8"?>
<build-type xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" uuid="e21ccb40-537c-4a28-8e18-e9e3412de153" xsi:noNamespaceSchemaLocation="http://www.jetbrains.com/teamcity/schemas/9.0/project-config.xsd">
  <name>installer windows</name>
  <description />
  <settings ref="RequiresMpsExtions">
    <options>
      <option name="artifactRules" value="*.exe" />
    </options>
    <parameters />
    <build-runners order="RUNNER_5">
      <runner id="RUNNER_5" name="build nsi" type="simpleRunner">
        <parameters>
          <param name="script.content" value="%teamcity.build.checkoutDir%/NSIS/makensis.exe %teamcity.build.checkoutDir%/mbeddr.nsi" />
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
    </build-runners>
    <vcs-settings>
      <vcs-entry-ref root-id="MbeddrInstallerWin" />
    </vcs-settings>
    <requirements>
      <equals name="teamcity.agent.jvm.os.name" value="Windows 8.1" />
    </requirements>
    <build-triggers>
      <build-trigger id="vcsTrigger" type="vcsTrigger">
        <parameters>
          <param name="branchFilter" value="+:*" />
          <param name="quietPeriodMode" value="DO_NOT_USE" />
        </parameters>
      </build-trigger>
    </build-triggers>
    <artifact-dependencies>
      <dependency sourceBuildTypeId="Mbeddr2_Mbeddr_Package_DownloadJre" cleanDestination="false">
        <revisionRule name="sameChainOrLastFinished" revision="latest.sameChainOrLastFinished" />
        <artifact sourcePath="jdk.zip!/**/*=&gt;%teamcity.build.checkoutDir%/files/mbeddr/&#xD;&#xA;-:." />
      </dependency>
      <dependency sourceBuildTypeId="Mbeddr2_Mbeddr_Package_PackageMpsWithMbeddr" cleanDestination="false">
        <revisionRule name="sameChainOrLastFinished" revision="latest.sameChainOrLastFinished" />
        <artifact sourcePath="mbeddr-win.zip!/mbeddr/**/*=&gt;%teamcity.build.checkoutDir%/files/mbeddr&#xD;&#xA;-:." />
      </dependency>
      <dependency sourceBuildTypeId="Mbeddr2_Mbeddr_Utilities_Cbmc_Windows" cleanDestination="false">
        <revisionRule name="lastSuccessful" revision="latest.lastSuccessful" />
        <artifact sourcePath="cbmc-win.zip!**=&gt;%teamcity.build.checkoutDir%/files/3rd-party/cbmc" />
      </dependency>
    </artifact-dependencies>
    <dependencies>
      <depend-on sourceBuildTypeId="Mbeddr2_Mbeddr_Package_PackageMpsWithMbeddr">
        <options>
          <option name="run-build-if-dependency-failed" value="CANCEL" />
          <option name="run-build-if-dependency-failed-to-start" value="CANCEL" />
          <option name="take-started-build-with-same-revisions" value="true" />
          <option name="take-successful-builds-only" value="true" />
        </options>
      </depend-on>
      <depend-on sourceBuildTypeId="Mbeddr2_Mbeddr_Package_DownloadJre">
        <options>
          <option name="run-build-if-dependency-failed" value="RUN_ADD_PROBLEM" />
          <option name="take-started-build-with-same-revisions" value="true" />
          <option name="take-successful-builds-only" value="true" />
        </options>
      </depend-on>
    </dependencies>
    <cleanup />
  </settings>
</build-type>

